{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "target": "ES6",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noEmitOnError": false,
    "strict": false,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false
  },
  "exclude": ["node_modules"]
}